        <Component Id="Comp_ir" DiskId="1" Guid="76d8e4c4-32d4-473a-b87c-7f508ad873ea">
          <Condition><![CDATA[(ALLUSERS = 2)]]></Condition>
          <File Id="File_ir.exe" Name="ir.exe" />
