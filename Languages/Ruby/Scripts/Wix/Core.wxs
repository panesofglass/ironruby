        <Component Id="Comp_ir64" DiskId="1" Guid="f710f534-a814-4b22-a3f4-f2996ae49923">
          <Condition><![CDATA[((ALLUSERS = 2) AND VersionNT64)]]></Condition>
          <File Id="File_ir64.exe" Name="ir64.exe" />
        </Component>
      </Directory>
    </DirectoryRef>
  </Fragment>
</Wix>
